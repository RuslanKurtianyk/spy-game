
{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Spy Game API",
    "description": "API documentation for Spy game server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8081",
  "basePath": "/api/",
  "tags": [
    {
      "name": "Games",
      "description": "API for games"
    },
    {
      "name": "Locations",
      "description": "API for locations"
    }
  ],
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/games": {
      "post": {
        "tags": ["Games"],
        "summary": "Create new game",
        "parameters": [
          {
            "name": "game",
            "in": "body",
            "description": "Game that we want to create",
            "schema": {
              "$ref": "#/definitions/GameDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Games"
            }
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/games/{id}": {
      "get": {
        "tags": ["Games"],
        "summary": "Get game by id in system",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of game that we want to find",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Game"
            }
          },
          "404": {
            "description": "Game not found"
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/games/{gameId}/join": {
      "put": {
        "tags": ["Games"],
        "summary": "Join to the game",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of game that we want to join",
            "type": "string"
          },
          {
            "name": "playerName",
            "in": "body",
            "description": "Player's name ",
            "schema": {
              "$ref": "#/definitions/Player"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game joined"
          },
          "400": {
            "description": "Wrong input parameters"
          },
          "404": {
            "description": "Game not found"
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/games/{gameId}/start": {
      "put": {
        "tags": ["Games"],
        "summary": "Start to the game",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of game that we want to start",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Game started"
          },
          "400": {
            "description": "Wrong input parameters"
          },
          "404": {
            "description": "Game not found"
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/locations": {
      "get": {
        "tags": ["Locations"],
        "summary": "Get list of all locations",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Locations"
            }
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/locations/random": {
      "get": {
        "tags": ["Locations"],
        "summary": "Get random location",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Location"
            }
          },
          "404": {
            "description": "Location not found"
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    }
  },
  "definitions": {
    "Game": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "players": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["New", "InProgress", "Finished"]
        }
      }
    },
    "GameDto": {
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "players": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["New", "InProgress", "Finished"]
        }
      }
    },
    "Location": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Locations": {
      "type": "array",
      "$ref": "#/definitions/Location"
    },
    "Player": {
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}